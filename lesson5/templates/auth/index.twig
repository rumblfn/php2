{% if isAuth %}
    Добро пожаловать {{ userName }} <a href="/public/?c=auth&a=logout">[Выход]</a>
{% else %}
    <form action="/public/?c=auth&a=login" method="post">
        <input type="text" name="login" placeholder="Логин">
        <input type="text" name="pass" placeholder="Пароль">
        <input type="submit" name="submit" value="Войти">
    </form>
    <a href="/public/?c=auth&a=registration">Нет аккаунта? Зарегестрируйтесь</a>
{% endif %}